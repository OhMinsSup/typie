{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Typie",
  "version": "0.0.1",
  "identifier": "co.typie",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5000",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "타이피",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 16,
          "y": 16
        }
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": ["icons/icon.icns"],
    "resources": {
      "resources/": "./"
    },
    "macOS": {
      "signingIdentity": "Developer ID Application: PENXLE COMPANY (4V96GK9874)"
    }
  }
}
