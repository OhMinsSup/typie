{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "codegen": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".sark/**", "styled-system/**"]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "persistent": true,
      "cache": false
    },
    "lint:svelte": {
      "dependsOn": ["^codegen", "codegen"]
    },
    "lint:typecheck": {
      "dependsOn": ["codegen"]
    },
    "test": {
      "dependsOn": ["codegen"],
      "outputs": ["coverage/**"]
    }
  }
}
